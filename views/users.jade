extends ./layout
block content
	h1 
		a(href='/users') Users

	ul
		each user in users
			li
				a(href='/user/'+user.id)= user.name
	
	div
		a(href='/home') Home

	article
		if posts
			ul
				each post in posts
					p
						li
							h2= post.title
							= post.description
							p
								iframe(
									width="560" 
									height="315" 
									src="https://www.youtube.com/embed/"+post.videoId+"?rel=0" 
									frameborder="0" 
									allowfullscreen
								)
		else
			h2 ^^

	

